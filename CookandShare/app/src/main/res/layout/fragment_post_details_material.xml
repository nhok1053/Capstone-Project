<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    tools:context=".fragment.PostDetailsMaterialFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/description_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_description"
            android:layout_marginLeft="8dp"
            android:text="Thông tin món ăn"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description_title"
            android:layout_margin="8dp"
            android:background="@drawable/textview_background"
            android:padding="8dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="398dp" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_description"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:text="Thời gian: "
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_description"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/duration"
            android:textSize="15dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tv_description"
            android:layout_below="@+id/tv_description">

            <TextView
                android:id="@+id/number_of_people_eat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="40dp"
                android:text="Số người ăn: "
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number_of_people_eat_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="95dp"
                android:text="4"

                android:textAlignment="textStart"
                android:textSize="15dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/difficult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/duration"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:text="Độ khó: "
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/difficult_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/duration"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/difficult"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/material_title_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/difficult"
            android:layout_marginLeft="8dp"
            android:text="Nguyên liệu"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_material_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/material_title_details"
            android:layout_margin="8dp"
            android:background="@drawable/textview_background"
            android:padding="8dp"
            android:text="sassas
sasasas
sasassa" />



        <Button
            android:id="@+id/start_cooking"
            android:layout_width="252dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_material_details"
            android:layout_centerInParent="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="#64DD17"
            android:text="Bắt đầu nấu"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>

