<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="5dp"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center">
        <TextView
            android:textColor="#000000"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Thêm vào Cookbook"
            android:textSize="20sp" />

        <Button

            android:id="@+id/btnAddToCookbookCancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_close_black"
            android:textSize="10sp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvAddToCookbookAllCookbook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

    </android.support.v7.widget.RecyclerView>
    <Button
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/colorPrimary"
        android:text="Thêm Cookbook"
        android:layout_gravity="center"
        android:id="@+id/btnAddNewCookbook"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
         />
</LinearLayout>