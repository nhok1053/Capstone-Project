<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvCookbook"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp">

        <RelativeLayout
            android:id="@+id/flmainCookbook"
            android:layout_width="120dp"
            android:layout_height="145dp">

            <ImageView
                android:id="@+id/imgMainCookbook"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="#FACA21" />

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#66000000">

                <TextView
                    android:id="@+id/tvNumberRecipe"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:gravity="center"
                    android:text="14 recipe added"
                    android:textColor="#fff"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvCookbookName"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/flmainCookbook"
            android:gravity="center_horizontal"
            android:maxLines="2"
            android:padding="2dp"
            android:text="Cookbook"
            android:textColor="#000000"
            android:textSize="15sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>