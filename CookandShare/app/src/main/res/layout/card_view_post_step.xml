<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/txt_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="1"
                    android:textSize="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_step_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp">

                    <EditText
                        android:id="@+id/edt_step_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/color_edit_text"
                        android:hint="Nhập hướng dẫn vào đây "
                        android:minLines="5"
                        android:paddingLeft="5dp" />
                </RelativeLayout>
                <TextView
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:id="@+id/add_image_title"
                    android:layout_margin="8dp"
                    android:text="- Tải ảnh bước thực hiên "
                    android:layout_below="@id/rl_step_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:id="@+id/rl_image"
                    android:layout_below="@id/add_image_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img_step_recipe"
                        android:background="@drawable/image_border"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                       />
                    <Button
                        android:id="@+id/btn_step_add_image"
                        android:text="Add image"
                        android:background="#ffffff"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/img_delete"
                        android:layout_margin="8dp"
                        android:layout_alignParentEnd="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </RelativeLayout>
                <TextView
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:id="@+id/more_information_title"
                    android:layout_margin="8dp"
                    android:text="- Thêm mẹo vặt (không bắt buộc) "
                    android:layout_below="@id/rl_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:id="@+id/rl_tip"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_below="@+id/more_information_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:minLines="3"
                        android:id="@+id/step_tip"
                        android:paddingLeft="5dp"
                        android:hint="Mẹo nhỏ cho bước này "
                        android:background="@color/color_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />
                    <EditText
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/step_tip"
                        android:id="@+id/material_tip"
                        android:paddingLeft="5dp"
                        android:hint="Nguyên liệu bí mật "
                        android:background="@color/color_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_time_step"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/rl_tip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingLeft="8dp"
                        android:text="- Thời gian thực hiện "
                        android:textAlignment="textStart"
                        android:textColor="#000000"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/tv_step_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:text="0p"
                        android:textColor="#FF6D00"
                        android:textSize="18dp" />
                </RelativeLayout>
                <ImageView
                    android:id="@+id/img_delete_step"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/rl_time_step"
                    android:src="@drawable/recyclebin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>