<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        android:elevation="5dp"
        android:id="@+id/cvTopPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cvTopPostUserAvatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/border_circle_image" />

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cvTopPostUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TTL"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cvTopPostPostTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="11:20 thu 2 6-3-2018"
                        android:textSize="16sp" />
                </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:layout_marginTop="8dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/cvTopPostBtnShowMore"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/three_dot_vertical" />
            </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/cvTopPostImgContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:id="@+id/cvTopPostTvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Title"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/cvTopPostTvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="Description"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/cvTopPostTvLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/card_view_top_post_like" />

                <TextView
                    android:id="@+id/cvTopPostTvComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/card_view_top_post_comment" />
            </LinearLayout>
            <View
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                    <Button
                        android:paddingRight="50dp"
                        android:drawableLeft="@drawable/like_set"
                        android:textAlignment="inherit"
                        android:paddingLeft="50dp"
                        android:textColor="#757575"
                        android:id="@+id/cvTopPostBtnLike"
                        android:layout_width="175dp"
                        android:layout_height="50dp"
                        android:background="@drawable/button_background"
                        android:text="@string/card_view_top_post_like" />
                <Button
                    android:paddingRight="30dp"
                    android:drawableLeft="@drawable/comment_set"
                    android:textAlignment="inherit"
                    android:paddingLeft="30dp"
                    android:textColor="#757575"
                    android:background="@drawable/button_background"
                    android:id="@+id/cvTopPostBtnComment"
                    android:layout_width="190dp"
                    android:layout_height="50dp"
                    android:text="@string/card_view_top_post_comment" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>